<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skatch - Luxury Bags</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-brown: #8B4513;
            --secondary-brown: #A0522D;
            --light-brown: #5D4037;
            --background-light: #f8f6f2;
            --border-light: #e8dfd4;
            --card-bg: #faf7f3;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #f8f6f2 0%, #f0ede6 100%);
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
        }

        /* Navigation */
        .navbar {
            background: linear-gradient(135deg, var(--primary-brown) 0%, var(--secondary-brown) 100%);
            padding: 1rem 0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar-brand {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            font-weight: 600;
            color: white !important;
        }

        .nav-link {
            color: rgba(255,255,255,0.9) !important;
            font-weight: 500;
            transition: all 0.3s ease;
            padding: 0.5rem 1rem !important;
        }

        .nav-link:hover,
        .nav-link.active {
            color: white !important;
            transform: translateY(-1px);
        }

        /* Mobile Navigation */
        .navbar-toggler {
            border: 1px solid rgba(255,255,255,0.3);
            padding: 0.25rem 0.5rem;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.8%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        /* Shop Header */
        .shop-header {
            background: white;
            padding: 3rem 0;
            border-bottom: 1px solid var(--border-light);
        }

        .shop-title {
            font-family: 'Playfair Display', serif;
            color: var(--light-brown);
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 2.5rem;
        }

        .shop-subtitle {
            color: var(--primary-brown);
            font-weight: 500;
            font-size: 1.1rem;
        }

        /* Filter Section */
        .filter-section {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(139, 69, 19, 0.08);
            margin-bottom: 2rem;
            border: 1px solid #f0e6dc;
            position: sticky;
            top: 100px;
        }

        .filter-title {
            font-family: 'Playfair Display', serif;
            color: var(--light-brown);
            font-weight: 600;
            margin-bottom: 1.5rem;
            font-size: 1.3rem;
        }

        .filter-group {
            margin-bottom: 1.5rem;
        }

        .filter-label {
            font-weight: 600;
            color: var(--light-brown);
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-select, .form-check-input {
            border: 1.5px solid var(--border-light);
            border-radius: 8px;
            padding: 10px;
            background: #fcfaf7;
            transition: all 0.3s ease;
        }

        .form-select:focus, .form-check-input:focus {
            border-color: var(--primary-brown);
            box-shadow: 0 0 0 3px rgba(139, 69, 19, 0.1);
            outline: none;
        }

        .form-check-label {
            color: var(--light-brown);
            font-weight: 500;
            cursor: pointer;
        }

        .form-check-input:checked {
            background-color: var(--primary-brown);
            border-color: var(--primary-brown);
        }

        /* Products Grid */
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .product-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(139, 69, 19, 0.08);
            transition: all 0.3s ease;
            border: 1px solid #f0e6dc;
            height: fit-content;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(139, 69, 19, 0.15);
        }

        .product-image {
            width: 100%;
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-family: 'Playfair Display', serif;
            font-size: 1.2rem;
            overflow: hidden;
            background: var(--primary-brown);
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-card:hover .product-image img {
            transform: scale(1.05);
        }

        .product-info {
            padding: 1.5rem;
        }

        .product-name {
            font-family: 'Playfair Display', serif;
            color: var(--light-brown);
            font-weight: 600;
            font-size: 1.2rem;
            margin-bottom: 0.5rem;
            line-height: 1.3;
        }

        .product-price {
            color: var(--primary-brown);
            font-weight: 600;
            font-size: 1.3rem;
            margin-bottom: 1rem;
        }

        .product-original-price {
            color: #999;
            text-decoration: line-through;
            font-size: 1rem;
            margin-left: 0.5rem;
        }

        .product-discount {
            background: var(--primary-brown);
            color: white;
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            display: inline-block;
            margin-bottom: 1rem;
        }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(135deg, var(--primary-brown) 0%, var(--secondary-brown) 100%);
            border: none;
            padding: 12px 24px;
            font-weight: 500;
            border-radius: 8px;
            transition: all 0.3s ease;
            width: 100%;
            color: white;
            cursor: pointer;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(139, 69, 19, 0.3);
        }

        .btn-outline-secondary {
            border-color: var(--border-light);
            color: var(--light-brown);
            transition: all 0.3s ease;
        }

        .btn-outline-secondary:hover,
        .btn-outline-secondary.active {
            background: var(--primary-brown);
            border-color: var(--primary-brown);
            color: white;
        }

        /* Sort Section */
        .sort-section {
            background: white;
            padding: 1.5rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            border: 1px solid var(--border-light);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .section-divider {
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--primary-brown), transparent);
            margin: 2rem 0;
        }

        /* No Products */
        .no-products {
            text-align: center;
            padding: 3rem;
            color: var(--light-brown);
            background: white;
            border-radius: 12px;
            margin: 2rem 0;
        }

        .no-products h3 {
            font-family: 'Playfair Display', serif;
            margin-bottom: 1rem;
        }

        /* Mobile Filter Button */
        .mobile-filter-btn {
            display: none;
            background: var(--primary-brown);
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            font-weight: 500;
            margin-bottom: 1rem;
            width: 100%;
        }

        /* Offcanvas for Mobile Filters */
        .offcanvas-filter .offcanvas-header {
            background: linear-gradient(135deg, var(--primary-brown) 0%, var(--secondary-brown) 100%);
            color: white;
        }

        .offcanvas-filter .offcanvas-title {
            font-family: 'Playfair Display', serif;
            font-weight: 600;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .products-grid {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                gap: 1.5rem;
            }
        }

        @media (max-width: 992px) {
            .shop-title {
                font-size: 2rem;
            }
            
            .shop-subtitle {
                font-size: 1rem;
            }
            
            .sort-section {
                flex-direction: column;
                align-items: stretch;
            }
            
            .sort-section > div {
                width: 100%;
                margin-bottom: 1rem;
            }
            
            .btn-group {
                width: 100%;
                display: grid;
                grid-template-columns: 1fr 1fr 1fr;
                gap: 0.5rem;
            }
            
            .btn-group .btn {
                text-align: center;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }
        }

        @media (max-width: 768px) {
            .shop-header {
                padding: 2rem 0;
            }
            
            .shop-title {
                font-size: 1.8rem;
            }
            
            .container {
                padding: 0 15px;
            }
            
            .filter-section {
                display: none;
            }
            
            .mobile-filter-btn {
                display: block;
            }
            
            .products-grid {
                grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
                gap: 1rem;
            }
            
            .product-info {
                padding: 1rem;
            }
            
            .product-name {
                font-size: 1.1rem;
            }
            
            .product-price {
                font-size: 1.2rem;
            }
        }

        @media (max-width: 576px) {
            .navbar-brand {
                font-size: 1.5rem;
            }
            
            .shop-header {
                padding: 1.5rem 0;
            }
            
            .shop-title {
                font-size: 1.6rem;
            }
            
            .products-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
            
            .product-card {
                margin: 0 auto;
                max-width: 320px;
            }
            
            .sort-section {
                padding: 1rem;
            }
            
            .btn-group {
                grid-template-columns: 1fr;
            }
            
            .no-products {
                padding: 2rem 1rem;
            }
            
            .no-products h3 {
                font-size: 1.4rem;
            }
        }

        @media (max-width: 400px) {
            .shop-title {
                font-size: 1.4rem;
            text-align: center;
            line-height: 1.2;
            margin-bottom: 0.5rem;
            padding: 0 10px;
            word-wrap: break-word;
            overflow-wrap: break-word;
            hyphens: auto;
            -webkit-hyphens: auto;
            -ms-hyphens: auto;
        }
            
            .shop-subtitle {
                font-size: 0.9rem;
                text-align: center;
                padding: 0 10px;
                line-height: 1.3;
            }
            
            .container {
                padding: 0 10px;
            }
            
            .product-image {
                height: 180px;
            }
            
            .product-name {
                font-size: 1rem;
                line-height: 1.2;
            }
            
            .product-price {
                font-size: 1.1rem;
            }
            
            .btn-primary {
                padding: 10px 20px;
                font-size: 0.9rem;
            }
        }

        /* Loading States */
        .loading {
            opacity: 0.7;
            pointer-events: none;
        }

        /* Alert Improvements */
        .alert {
            border-radius: 0;
            margin: 0;
            border: none;
        }

        /* Focus styles for accessibility */
        .btn:focus,
        .form-select:focus,
        .form-check-input:focus {
            outline: 2px solid var(--primary-brown);
            outline-offset: 2px;
        }

        /* Smooth scrolling */
        html {
            scroll-behavior: smooth;
        }
    </style>
</head>
<body>
    <!-- Flash Messages -->
    <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Skatch</a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="/">Home</a>
                    <a class="nav-link active" href="/shop">Shop</a>
                    <a class="nav-link" href="/users/cart">Cart</a>
                    <a class="nav-link" href="#">Contact</a>
                    <a class="nav-link" href="/users/logout">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Shop Header -->
    <div class="shop-header">
        <div class="container text-center">
            <h1 class="shop-title">Luxury Bag Collection</h1>
            <p class="shop-subtitle">Discover our exquisite range of premium handcrafted bags</p>
        </div>
    </div>

    <div class="container">
        <!-- Mobile Filter Button -->
        <button class="mobile-filter-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#filterOffcanvas">
            📋 Filters & Sort
        </button>

        <div class="row">
            <!-- Filters Sidebar - Hidden on mobile, shown in offcanvas -->
            <div class="col-lg-3 d-none d-lg-block">
                <div class="filter-section">
                    <h4 class="filter-title">Filter by:</h4>
                    
                    <div class="filter-group">
                        <label class="filter-label">Availability</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="inStock">
                            <label class="form-check-label" for="inStock">In Stock</label>
                        </div>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">Discount</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="discounted">
                            <label class="form-check-label" for="discounted">Discounted Items</label>
                        </div>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">Collections</label>
                        <select class="form-select">
                            <option selected>All Collections</option>
                            <option>New Collection</option>
                            <option>Classic Series</option>
                            <option>Limited Edition</option>
                        </select>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">Price Range</label>
                        <select class="form-select">
                            <option selected>All Prices</option>
                            <option>Under $100</option>
                            <option>$100 - $300</option>
                            <option>$300 - $500</option>
                            <option>Over $500</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Products Grid -->
            <div class="col-lg-9">
                <!-- Sort Section -->
                <div class="sort-section">
                    <div class="d-flex flex-wrap align-items-center gap-2">
                        <strong>Sort by:</strong>
                        <select class="form-select" style="width: auto; min-width: 160px;">
                            <option selected>Popular</option>
                            <option>Newest</option>
                            <option>Price: Low to High</option>
                            <option>Price: High to Low</option>
                        </select>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-secondary active">All Products</button>
                        <button type="button" class="btn btn-outline-secondary">New Collection</button>
                        <button type="button" class="btn btn-outline-secondary">Discounted</button>
                    </div>
                </div>

                <div class="section-divider"></div>

                <!-- Products Grid -->
                <div class="products-grid">
                    <% if (products && products.length > 0) { %>
                        <% products.forEach(function(product) { %>
                            <div class="product-card">
                                <div class="product-image" style="background: <%- product.bgcolor || '#8B4513' %>;">
                                    <% if (product.image) { %>
                                        <img src="data:<%- product.imageType %>;base64,<%- product.image.toString('base64') %>" alt="<%- product.name %>">
                                    <% } else { %>
                                        <span style="color: white; font-size: 0.9rem; padding: 1rem; text-align: center;"><%- product.name %></span>
                                    <% } %>
                                </div>
                                <div class="product-info">
                                    <h3 class="product-name"><%- product.name %></h3>
                                    <div class="d-flex align-items-center">
                                        <span class="product-price">$<%- product.price %></span>
                                        <% if (product.discount && product.discount > 0) { %>
                                            <% 
                                                let originalPrice = product.price / (1 - product.discount / 100);
                                                let discountAmount = originalPrice - product.price;
                                            %>
                                            <span class="product-original-price">$<%- originalPrice.toFixed(2) %></span>
                                        <% } %>
                                    </div>
                                    <% if (product.discount && product.discount > 0) { %>
                                        <span class="product-discount"><%- product.discount %>% OFF</span>
                                    <% } %>
                                    <form action="/users/cart/add" method="POST">
                                        <input type="hidden" name="productId" value="<%= product._id %>">
                                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                                    </form>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12">
                            <div class="no-products">
                                <h3>No Products Available</h3>
                                <p>Check back later for new arrivals!</p>
                                <a href="/products/create" class="btn btn-primary mt-3">Add New Product</a>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile Filter Offcanvas -->
    <div class="offcanvas offcanvas-start offcanvas-filter" tabindex="-1" id="filterOffcanvas">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">Filters & Sort</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <div class="filter-group">
                <label class="filter-label">Sort by</label>
                <select class="form-select mb-3">
                    <option selected>Popular</option>
                    <option>Newest</option>
                    <option>Price: Low to High</option>
                    <option>Price: High to Low</option>
                </select>
            </div>

            <div class="filter-group">
                <label class="filter-label">Availability</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="mobileInStock">
                    <label class="form-check-label" for="mobileInStock">In Stock</label>
                </div>
            </div>

            <div class="filter-group">
                <label class="filter-label">Discount</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="mobileDiscounted">
                    <label class="form-check-label" for="mobileDiscounted">Discounted Items</label>
                </div>
            </div>

            <div class="filter-group">
                <label class="filter-label">Collections</label>
                <select class="form-select">
                    <option selected>All Collections</option>
                    <option>New Collection</option>
                    <option>Classic Series</option>
                    <option>Limited Edition</option>
                </select>
            </div>

            <div class="filter-group">
                <label class="filter-label">Price Range</label>
                <select class="form-select">
                    <option selected>All Prices</option>
                    <option>Under $100</option>
                    <option>$100 - $300</option>
                    <option>$300 - $500</option>
                    <option>Over $500</option>
                </select>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button class="btn btn-primary" data-bs-dismiss="offcanvas">Apply Filters</button>
                <button class="btn btn-outline-secondary" onclick="resetFilters()">Reset All</button>
            </div>
        </div>
    </div>

    <script>
        // Enhanced filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Filter functionality
            const filterCheckboxes = document.querySelectorAll('.form-check-input');
            
            filterCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    applyFilters();
                });
            });

            // Sort functionality
            const sortSelects = document.querySelectorAll('.form-select');
            sortSelects.forEach(select => {
                select.addEventListener('change', function() {
                    applyFilters();
                });
            });

            // Category buttons
            const categoryButtons = document.querySelectorAll('.btn-group .btn');
            categoryButtons.forEach(button => {
                button.addEventListener('click', function() {
                    categoryButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    applyFilters();
                });
            });

            // Auto-dismiss flash messages
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });

            // Add loading states to forms
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    const submitBtn = this.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.classList.add('loading');
                        submitBtn.innerHTML = 'Adding...';
                    }
                });
            });
        });

        function applyFilters() {
            console.log('Applying filters...');
            // Add your filter logic here
            // This would typically make an API call or filter products client-side
        }

        function resetFilters() {
            const checkboxes = document.querySelectorAll('.form-check-input');
            const selects = document.querySelectorAll('.form-select');
            const categoryButtons = document.querySelectorAll('.btn-group .btn');
            
            checkboxes.forEach(checkbox => checkbox.checked = false);
            selects.forEach(select => select.selectedIndex = 0);
            categoryButtons.forEach((button, index) => {
                button.classList.toggle('active', index === 0);
            });
            
            applyFilters();
        }

        // Handle window resize for better mobile experience
        window.addEventListener('resize', function() {
            if (window.innerWidth >= 768) {
                const offcanvas = bootstrap.Offcanvas.getInstance(document.getElementById('filterOffcanvas'));
                if (offcanvas) {
                    offcanvas.hide();
                }
            }
        });
    </script>
</body>
</html>
