<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skatch - Authentication</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-brown: #8B4513;
            --secondary-brown: #A0522D;
            --light-brown: #5D4037;
            --background-light: #f8f6f2;
            --border-light: #e8dfd4;
            --card-bg: #faf7f3;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #f8f6f2 0%, #f0ede6 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
            padding: 20px;
            line-height: 1.6;
        }

        .container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 8px 40px rgba(139, 69, 19, 0.08);
            max-width: 440px;
            width: 100%;
            overflow: hidden;
            border: 1px solid var(--border-light);
            margin: auto;
        }

        /* Header Styles */
        .header {
            background: linear-gradient(135deg, var(--primary-brown) 0%, var(--secondary-brown) 100%);
            color: white;
            padding: 40px 30px;
            text-align: center;
            position: relative;
        }

        .header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, #d4a574, transparent);
        }

        .header h1 {
            font-family: 'Playfair Display', serif;
            font-size: 2.2rem;
            font-weight: 600;
            margin: 0;
            letter-spacing: -0.5px;
        }

        /* Form Section */
        .form-section {
            padding: 40px 35px;
        }

        /* Form Toggle */
        .form-toggle {
            display: flex;
            margin-bottom: 35px;
            background: var(--card-bg);
            border-radius: 12px;
            padding: 6px;
            border: 1px solid var(--border-light);
        }

        .form-toggle-btn {
            flex: 1;
            padding: 14px;
            text-align: center;
            background: transparent;
            border: none;
            font-weight: 500;
            color: var(--primary-brown);
            border-radius: 8px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
            font-size: 14px;
            letter-spacing: 0.5px;
        }

        .form-toggle-btn.active {
            background: var(--primary-brown);
            color: white;
            box-shadow: 0 4px 12px rgba(139, 69, 19, 0.2);
        }

        .form-toggle-btn:hover:not(.active) {
            background: rgba(139, 69, 19, 0.1);
        }

        /* Form Containers */
        .form-container {
            display: none;
            animation: slideUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .form-container.active {
            display: block;
        }

        /* Form Elements */
        h3 {
            font-family: 'Playfair Display', serif;
            color: var(--light-brown);
            font-weight: 600;
            font-size: 1.6rem;
            margin-bottom: 30px;
            text-align: center;
            letter-spacing: -0.5px;
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-label {
            font-weight: 500;
            color: var(--light-brown);
            font-size: 14px;
            margin-bottom: 8px;
            letter-spacing: 0.5px;
            display: block;
        }

        .form-control {
            padding: 16px;
            border: 1.5px solid var(--border-light);
            border-radius: 10px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: #fcfaf7;
            color: var(--light-brown);
            width: 100%;
        }

        .form-control:focus {
            border-color: var(--primary-brown);
            box-shadow: 0 0 0 3px rgba(139, 69, 19, 0.1);
            background: white;
            outline: none;
        }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(135deg, var(--primary-brown) 0%, var(--secondary-brown) 100%);
            border: none;
            padding: 16px;
            font-weight: 500;
            border-radius: 10px;
            transition: all 0.3s ease;
            font-size: 15px;
            letter-spacing: 0.5px;
            box-shadow: 0 4px 15px rgba(139, 69, 19, 0.2);
            color: white;
            cursor: pointer;
            width: 100%;
            display: block;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(139, 69, 19, 0.3);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

        /* Utility Classes */
        .w-100 {
            width: 100%;
        }

        .mt-2 {
            margin-top: 16px;
        }

        /* Luxury Accent */
        .luxury-accent {
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--primary-brown), transparent);
            margin: 25px 0;
        }

        /* Animations */
        @keyframes slideUp {
            from { 
                opacity: 0; 
                transform: translateY(20px); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0); 
            }
        }

        /* Error/Success Messages */
        .alert {
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
            border: 1px solid transparent;
        }

        .alert-error {
            background: #f8d7da;
            color: #721c24;
            border-color: #f5c6cb;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            border-color: #c3e6cb;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                max-width: 400px;
            }
            
            .form-section {
                padding: 35px 30px;
            }
            
            .header {
                padding: 35px 25px;
            }
            
            .header h1 {
                font-size: 2rem;
            }
            
            h3 {
                font-size: 1.5rem;
            }
        }

        @media (max-width: 576px) {
            body {
                padding: 15px;
                align-items: flex-start;
                min-height: 100vh;
                height: auto;
            }
            
            .container {
                margin: 0;
                border-radius: 12px;
            }
            
            .form-section {
                padding: 30px 25px;
            }
            
            .header {
                padding: 30px 20px;
            }
            
            .header h1 {
                font-size: 1.8rem;
            }
            
            h3 {
                font-size: 1.4rem;
                margin-bottom: 25px;
            }
            
            .form-toggle {
                margin-bottom: 30px;
            }
            
            .form-toggle-btn {
                padding: 12px;
                font-size: 13px;
            }
            
            .form-control {
                padding: 14px;
                font-size: 14px;
            }
            
            .btn-primary {
                padding: 14px;
                font-size: 14px;
            }
            
            .form-group {
                margin-bottom: 20px;
            }
        }

        @media (max-width: 400px) {
            .form-section {
                padding: 25px 20px;
            }
            
            .header {
                padding: 25px 15px;
            }
            
            .header h1 {
                font-size: 1.6rem;
            }
            
            h3 {
                font-size: 1.3rem;
            }
            
            .form-toggle {
                flex-direction: column;
                gap: 5px;
            }
            
            .form-toggle-btn {
                padding: 10px;
            }
        }

        @media (max-height: 600px) and (orientation: landscape) {
            body {
                padding: 10px;
                align-items: flex-start;
            }
            
            .container {
                margin: 10px auto;
            }
            
            .form-section {
                padding: 25px 30px;
            }
            
            .header {
                padding: 25px 20px;
            }
        }

        /* Focus styles for accessibility */
        .form-toggle-btn:focus {
            outline: 2px solid var(--primary-brown);
            outline-offset: 2px;
        }

        .btn-primary:focus {
            outline: 2px solid var(--primary-brown);
            outline-offset: 2px;
        }

        /* Loading state */
        .btn-primary.loading {
            opacity: 0.7;
            pointer-events: none;
        }

        /* Password toggle visibility */
        .password-container {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--light-brown);
            cursor: pointer;
            padding: 4px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Welcome to Skatch</h1>
        </div>

        <div class="form-section">
            <!-- Alert Messages Placeholder -->
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-error">
                    <%= error %>
                </div>
            <% } %>
            
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="alert alert-success">
                    <%= success %>
                </div>
            <% } %>

            <div class="form-toggle">
                <button class="form-toggle-btn active" onclick="showForm('register')" aria-pressed="true">
                    Create Account
                </button>
                <button class="form-toggle-btn" onclick="showForm('login')" aria-pressed="false">
                    Login
                </button>
            </div>

            <div id="registerForm" class="form-container active" role="tabpanel" aria-labelledby="register-tab">
                <h3>Create your account</h3>
                <div class="luxury-accent" aria-hidden="true"></div>
                <form action="/users/register" method="POST" id="registerFormElement">
                    <div class="form-group">
                        <label for="fullname" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="fullname" name="fullname" required 
                               placeholder="Enter your full name" aria-required="true">
                    </div>
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required 
                               placeholder="Enter your email" aria-required="true">
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label">Password</label>
                        <div class="password-container">
                            <input type="password" class="form-control" id="password" name="password" required 
                                   placeholder="Create a password" aria-required="true">
                            <button type="button" class="password-toggle" onclick="togglePassword('password')" aria-label="Show password">
                                üëÅÔ∏è
                            </button>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mt-2" id="registerBtn">
                        Create My Account
                    </button>
                </form>
            </div>

            <div id="loginForm" class="form-container" role="tabpanel" aria-labelledby="login-tab" hidden>
                <h3>Login Your Account</h3>
                <div class="luxury-accent" aria-hidden="true"></div>
                <form action="/users/login" method="POST" id="loginFormElement">
                    <div class="form-group">
                        <label for="loginEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="loginEmail" name="email" required 
                               placeholder="Enter your email" aria-required="true">
                    </div>
                    <div class="form-group">
                        <label for="loginPassword" class="form-label">Password</label>
                        <div class="password-container">
                            <input type="password" class="form-control" id="loginPassword" name="password" required 
                                   placeholder="Enter your password" aria-required="true">
                            <button type="button" class="password-toggle" onclick="togglePassword('loginPassword')" aria-label="Show password">
                                üëÅÔ∏è
                            </button>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mt-2" id="loginBtn">
                        Login
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        function showForm(formType) {
            // Hide all forms
            document.querySelectorAll('.form-container').forEach(form => {
                form.classList.remove('active');
                form.setAttribute('hidden', 'true');
            });
            
            // Remove active class from all buttons
            document.querySelectorAll('.form-toggle-btn').forEach(btn => {
                btn.classList.remove('active');
                btn.setAttribute('aria-pressed', 'false');
            });
            
            // Show selected form and activate button
            const selectedForm = document.getElementById(formType + 'Form');
            const selectedButton = event.target;
            
            selectedForm.classList.add('active');
            selectedForm.removeAttribute('hidden');
            selectedButton.classList.add('active');
            selectedButton.setAttribute('aria-pressed', 'true');
            
            // Update ARIA labels for accessibility
            document.querySelectorAll('.form-toggle-btn').forEach(btn => {
                const isActive = btn.classList.contains('active');
                btn.setAttribute('aria-pressed', isActive.toString());
            });
        }

        function togglePassword(inputId) {
            const passwordInput = document.getElementById(inputId);
            const toggleButton = passwordInput.nextElementSibling;
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleButton.setAttribute('aria-label', 'Hide password');
                toggleButton.textContent = 'üôà';
            } else {
                passwordInput.type = 'password';
                toggleButton.setAttribute('aria-label', 'Show password');
                toggleButton.textContent = 'üëÅÔ∏è';
            }
        }

        // Form submission handling
        document.addEventListener('DOMContentLoaded', function() {
            const registerForm = document.getElementById('registerFormElement');
            const loginForm = document.getElementById('loginFormElement');
            
            if (registerForm) {
                registerForm.addEventListener('submit', function(e) {
                    const btn = document.getElementById('registerBtn');
                    btn.classList.add('loading');
                    btn.innerHTML = 'Creating Account...';
                });
            }
            
            if (loginForm) {
                loginForm.addEventListener('submit', function(e) {
                    const btn = document.getElementById('loginBtn');
                    btn.classList.add('loading');
                    btn.innerHTML = 'Logging in...';
                });
            }
            
            // Auto-focus first input in active form
            const activeForm = document.querySelector('.form-container.active');
            if (activeForm) {
                const firstInput = activeForm.querySelector('input');
                if (firstInput) {
                    firstInput.focus();
                }
            }
        });

        // Handle keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.key === 'ArrowLeft' || e.key === 'ArrowRight') {
                const buttons = document.querySelectorAll('.form-toggle-btn');
                const activeIndex = Array.from(buttons).findIndex(btn => btn.classList.contains('active'));
                
                if (e.key === 'ArrowLeft' && activeIndex > 0) {
                    buttons[activeIndex - 1].click();
                } else if (e.key === 'ArrowRight' && activeIndex < buttons.length - 1) {
                    buttons[activeIndex + 1].click();
                }
            }
        });
    </script>
</body>
</html>
